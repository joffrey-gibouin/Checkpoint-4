{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-12 text-center">
        <div class="container">
            <h1 class="m-4">Mes menus</h1>
            <div class="row justify-content-center my-3">
                <div class="col-12 col-sm-9 col-lg-6">
                    <ul class="list-group">
                        {% for menu in menus %}
                            <li class="list-group-item fs-4 d-flex justify-content-between align-items-center bg-dark text-light border border-light">
                                <a class="text-decoration-none text-light" href="{{ path('menu_show', {id: menu.id}) }}">{{ menu.name }}</a>
                                <span class="text-end">
                                    <a href="{{ path('menu_edit', {id: menu.id}) }}"><i class="far fa-edit text-success fs-2 mx-2 mx-lg-4"></i></a>
                                    <a href="{{ path('menu_delete', {id: menu.id}) }}"><i class="fas fa-trash text-success fs-2 mx-2 mx-lg-4"></i></a>
                                </span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
        <a href="{{ path('menu_new') }}">
            <button class="btn btn-outline-success btn-lg" type="button">Ajouter un Menu</button>
        </a>
    </div>
{% endblock %}
